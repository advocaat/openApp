<html>
<head>
    <title><%= pageName %></title>
    <meta charset="utf-8">
    <% include partials/sources.ejs %>
</head>
<body>
<% include partials/header.ejs %>
<div id="mainBody" >
    <div class="row">
        <div class="col-xs-4"></div>
        <div id="centerDiv" class="col-xs-4">

            <form class='form-signin' action='/' method='POST'>
                <h2 class='form-signin-heading'>Login</h2>
                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                <div class="alert alert-danger fade in"><%= message %></div>
                <% } %>
                <label class='sr-only'>Username</label>
                <input type='text' name='username' class='form-control name-field' placeholder='Username' required autofocus>
                <label class='sr-only'>Password</label>
                <input type='password' name='password' class='form-control pass-field' style="margin-bottom: 12px;" placeholder='Password' required>
                <button class='btn btn-lg btn-primary btn-block' type='submit'>Sign in</button>

            </form>
            <div>
                <a href="/auth/facebook" class="btn btn-social-icon btn-facebook"><span class="fa fa-facebook"></span></a>
                <a href="/auth/soundcloud"class="btn btn-social-icon btn-soundcloud"><span class="fa fa-soundcloud"></span></a>
                <a href="/auth/twitter" class="btn btn-social-icon btn-twitter"><span class="fa fa-twitter"></span></a>
                <a href="/auth/youtube" class="btn btn-social-icon btn-youtube"><span class="fa fa-youtube" style="color: red;"></span></a>
            </div>
        </div>
        <div class="col-xs-4"></div>
    </div>
</div>


</body>


</html>